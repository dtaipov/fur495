extends layout
block content
  h1 #{__("Fur_Atelier")}
  .carousel.slide(id="carouselControls", data-ride="carousel")
    ol.carousel-indicators
      li.active(data-target="#carouselControls", data-slide-to="0")
      li(data-target="#carouselControls", data-slide-to="1")
      li(data-target="#carouselControls" data-slide-to="2")
    .carousel-inner(role="listbox")
      .carousel-item.active
        img.d-block.img-fluid(src="https://instagram.fiev2-1.fna.fbcdn.net/t51.2885-15/e15/11254101_707966339326702_836534747_n.jpg", alt="First slide")
        .carousel-caption.d-none.d-md-block
          h3 #{__("Listing_Black_Fox_Stole")}
          p #{__("Listing_Black_Fox_Stole_Caption")}
      .carousel-item
        img.d-block.img-fluid(src="https://instagram.fiev2-1.fna.fbcdn.net/t51.2885-15/e15/11230441_1596703113910902_313958600_n.jpg", alt="Second slide")
        .carousel-caption.d-none.d-md-block
          h3 #{__("Listing_Silver_Fox_Scarf")}
          p #{__("Listing_Silver_Fox_Scarf_Caption")}
      .carousel-item
        img.d-block.img-fluid(src="https://instagram.fiev2-1.fna.fbcdn.net/t51.2885-15/e15/11189959_394015510790318_86800812_n.jpg", alt="Third slide")
        .carousel-caption.d-none.d-md-block
          h3 #{__("Listing_Raccoon_Scarf")}
          p #{__("Listing_Raccoon_Scarf_Caption")}
    a.carousel-control-prev(href="#carouselControls", role="button", data-slide="prev")
      span.carousel-control-prev-icon(aria-hidden="true")
      span.sr-only Previous
    a.carousel-control-next(href="#carouselControls", role="button", data-slide="next")
      span.carousel-control-next-icon(aria-hidden="true")
      span.sr-only  Next
