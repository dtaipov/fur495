.modal-header
  a.close(data-dismiss="modal") &times;
  h3 Register
.modal-body
  form(action="/account/register", method="post").form-horizontal
    fieldset
        br
        .control-group
            .control-group
                label.control-label(for="name.first") First Name 
                .controls
                    input(type="text", name="name.first", placeholder="First Name")
            .control-group
                label.control-label(for="name.last") Last Name
                .controls
                    input(type="text",  name="name.last", placeholder="Last Name")
        .control-group
            .control-group
                label.control-label(for="email") Email
                .controls
                    input(type="text", name="email", placeholder="Email Address")
        .control-group
            .control-group
                label.control-label(for="password") Password
                .controls
                    input(type="password", name="password", placeholder="Password")
            .control-group
                label.control-label(for="passwordConf") Password Confirm
                .controls
                    input(type="password", name="passwordConf", placeholder="Password Confirm")
.modal-footer
  a.btn(data-dismiss="modal") Close
  a.btn.btn-primary(onclick="$('.modal-body > form').submit();") Register